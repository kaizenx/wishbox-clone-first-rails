<div class="listing-section"></div>
<div class="row">
	<p>HAVE A QUESTION? EMAIL US!</p>
	
	<%= form_tag({controller: "contact_us", action: "contact" }, id: "contact_us_form", method: "post", class:"form-horizontal", role:"form") do %>
	<div class="form-group">
	   <label class="col-sm-2 control-label" for="ContactUsFirstName">First Name</label>
	   <div class="col-sm-10">
	   	<%= text_field_tag 'ContactUsFirstName', nil, :type => "text", :class=>"form-control", :required => true , :placeholder=>"Bob" %>
	   </div>
	</div>
	<div class="form-group">
	   <label class="col-sm-2 control-label" for="ContactUsLastName">Last Name</label>
	   <div class="col-sm-10">
	   	<%= text_field_tag 'ContactUsLastName', nil, :type => "text", :class=>"form-control", :required => true , :placeholder=>"Smith" %>
	   </div>
	</div>
	<div class="form-group">
	   <label class="col-sm-2 control-label" for="ContactUsEmail">Email</label>
	   <div class="col-sm-10">
	   	<%= text_field_tag 'ContactUsEmail', nil, :type => "email", :class=>"form-control", :required => true , :placeholder=>"bobsmith@gmail.com" %>
	   </div>
	</div>
	
	<div class="form-group">
	   <label for="ContactUsComments" class="col-sm-2 control-label">Questions/Comments</label>
	   <div class="col-sm-10">
	   	<%= text_area_tag 'ContactUsComments', nil, :rows => "3", :class=>"form-control", :required => true , :placeholder=>"Comments"  %>
	   </div>
	</div>
	<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Sign in</button>
    </div>
  </div>
  <% end %>
</div>
	
